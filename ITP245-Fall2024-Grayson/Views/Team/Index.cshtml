@model IEnumerable<ITP245_Fall2024_GraysonModel.Team>
@using System.Configuration;

@{
    ViewBag.Title = "Teams";
    ViewBag.ImagePath = ConfigurationManager.AppSettings["LogoImageLocation"]; // Getting the image path from config
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Team", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Division</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(team.ImageLocation))
                    {
                        var image = string.Format("{0}{1}", ViewBag.ImagePath, team.ImageLocation);
                        <img id="TeamLogoImage" height="100" width="90" style="border:solid" src="@Url.Content(image)" alt="Team Logo" />
                    }
                    else
                    {
                        <img id="TeamLogoImage" height="100" width="90" style="border:solid"
                             src="@Url.Content("~/Images/placeholder.jpg")" alt="Placeholder Logo" />
                    }
                </td>
                <td>
                    <a href="#" class="team-link" data-team-id="@team.TeamId">@team.Name</a>
                </td>
                <td>
                    @(team.Division?.Name ?? "N/A")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = team.TeamId }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = team.TeamId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="team-details">
    <!-- Team details will be loaded here -->
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Handle click event on team links
            $(document).on('click', '.team-link', function (e) {
                e.preventDefault();
                var TeamId = $(this).data('team-id');  // Get the TeamId from the link
                $.ajax({
                    url: '@Url.Action("Details", "Team", new { id = "__ID__" })'.replace('__ID__', TeamId),
                    type: "GET",
                    success: function (data) {
                        $('#team-details').html(data);  // Insert the response data into the div
                    },
                    error: function () {
                        alert('Error loading team details.');
                    }
                });
            });
        });
    </script>
}
