@model ITP245_Fall2024_GraysonModel.Team

<h3>@Model.Name Details</h3>

<!-- Team Information -->
<table class="table table-bordered">
    <tr>
        <th>Division</th>
        <td>@(Model.Division != null ? Model.Division.Name : "N/A")</td>
    </tr>
    <tr>
        <th>Manager</th>
        <td>@(Model.Player != null ? Model.Player.Name : "N/A")</td>
    </tr>
    <tr>
        <th>Assistant Manager</th>
        <td>@(Model.Player1 != null ? Model.Player1.Name : "N/A")</td>
    </tr>
    <tr>
        <th>Short Name</th>
        <td>@(Model.ShortName != null ? Model.ShortName : "N/A")</td>
    </tr>
</table>

<!-- Roster Section -->
<h4>Roster</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Player Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roster in Model.Rosters)
        {
            <tr>
                <td>@(roster.Player != null ? roster.Player.Name : "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Schedule Section -->
<h4>Game Schedule</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Opponent</th>
            <th>Location</th>
            <th>Field</th>
            <th>Home Score</th>
            <th>Visitor Score</th>
        </tr>
    </thead>
    <tbody>
        <!-- Home Games -->
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@Html.ActionLink(game.DateTime.ToString("MM/dd/yyyy"), "Details", "Game", new { id = game.GameId }, null)</td>
                <td>@game.DateTime.ToString("hh:mm tt")</td>
                <td>@(game.Team1?.Name ?? "N/A")</td> <!-- Opponent Team for Home Games -->
                <td>Home</td>
                <td>@(game.Field?.Name ?? "N/A")</td> <!-- Field for Home Games -->
                <td>@(game.HomeScore?.ToString() ?? "N/A")</td> <!-- Home Score -->
                <td>@(game.VisitorScore?.ToString() ?? "N/A")</td> <!-- Visitor Score -->
            </tr>
        }
        <!-- Away Games -->
        @foreach (var game in Model.Games1)
        {
            <tr>
                <td>@Html.ActionLink(game.DateTime.ToString("MM/dd/yyyy"), "Details", "Game", new { id = game.GameId }, null)</td>
                <td>@game.DateTime.ToString("hh:mm tt")</td>
                <td>@(game.Team?.Name ?? "N/A")</td> <!-- Opponent Team for Away Games -->
                <td>Away</td>
                <td>@(game.Field?.Name ?? "N/A")</td> <!-- Field for Away Games -->
                <td>@(game.HomeScore?.ToString() ?? "N/A")</td> <!-- Home Score -->
                <td>@(game.VisitorScore?.ToString() ?? "N/A")</td> <!-- Visitor Score -->
            </tr>
        }
    </tbody>
</table>
