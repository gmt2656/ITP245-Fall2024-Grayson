@using ITP245_Fall2024_GraysonModel
@model Dictionary<string, List<ISports>>

@{
    ViewBag.Title = "Home Page";
}

<!-- Main Section -->
<main class="container my-5">
    <section class="row mb-4" aria-labelledby="title">
        <h1 id="title" class="text-center mb-4">Sports Project Management</h1>
    </section>

    <div class="row">
        <!-- Loop through the Teams and Players -->
        @foreach (var sports in Model)
        {
            <section class="col-md-6 mb-4" aria-labelledby="sectionTitle">
                <h2 class="border-bottom pb-2">@sports.Key</h2>

                <!-- List of Teams/Players -->
                <ul class="list-unstyled">
                    @foreach (var project in sports.Value)
                    {
                        <li class="mb-2">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@project.Name</h5>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </section>
        }
    </div>
</main>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
