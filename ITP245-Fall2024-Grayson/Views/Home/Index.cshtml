@using ITP245_Fall2024_GraysonModel
@model Dictionary<string, List<ISports>>

@{
    ViewBag.Title = "Home Page";
}

<!-- Main Section -->
<main class="container my-5">
    <section class="row mb-4" aria-labelledby="mainTitle">
        <h1 id="mainTitle" class="text-center mb-4">Sports Project Management</h1>
    </section>

    <div class="row">
        <!-- Loop through the Teams and Players -->
        @if (Model.Any())
        {
            foreach (var sports in Model)
            {
                <section class="col-md-6 mb-4" aria-labelledby="@($"sectionTitle-{sports.Key.Replace(" ", "-")}")">
                    <h2 id="@($"sectionTitle-{sports.Key.Replace(" ", "-")}")" class="border-bottom pb-2">@sports.Key</h2>

                    <!-- List of Teams/Players -->
                    @if (sports.Value.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var project in sports.Value)
                            {
                                <li class="mb-2">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">@(!string.IsNullOrEmpty(project.Name) ? project.Name : "Unnamed")</h5>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No players or teams available for this sport.</p>
                    }
                </section>
            }
        }
        else
        {
            <p class="text-center">No sports data available.</p>
        }
    </div>

    <!-- Link to Officers Area -->
    <section class="text-center mt-5">
        <h3>Go to Officers Area</h3>
        <p>@Html.ActionLink("Officers Home", "Index", "Home", new { area = "Officers" }, new { @class = "btn btn-primary" })</p>
    </section>
</main>
